{
    "version": 2,
    "name": "betting-system",
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "https://your-backend-url.vercel.app/api/$1"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/$1"
        }
    ],
    "env": {
        "VITE_API_URL": "https://your-app.vercel.app/api"
    }
}