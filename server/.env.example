# Database
DATABASE_URL="postgresql://user:password@localhost:5432/betting_db?schema=public"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379

# Auth
JWT_SECRET="CHANGE_THIS_SECRET_IN_PRODUCTION_use_openssl_rand_base64_32"
JWT_EXPIRES_IN="1d"

# App
PORT=5000
NODE_ENV="development"

# Security & Anti-Cheat
ODDS_FREEZE_SECONDS=5
MAX_BETS_PER_3_SECONDS=3
RISK_THRESHOLD_WIN_RATE=0.7

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Commission
COMMISSION_HOLD_PERCENTAGE=10
